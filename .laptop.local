brew "htop"
brew "wget"
brew "pyenv"
brew "httpstat"
brew "diff-so-fancy"
brew "m-cli"
brew "adr-tools"
cask "iterm2"
cask "dash"
cask "pycharm"
cask "macvim"
cask "sequel-pro"
cask "charles"

cask "sogouinput"
cask "alfred"
cask "spectacle"
cask "rescuetime"
cask "go2shell"
cask "qq"
